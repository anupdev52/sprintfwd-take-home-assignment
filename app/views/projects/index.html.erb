<h1>Projects</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td>
        <%= link_to 'Show', project, class: "btn btn-primary btn-sm" %>
        <%= link_to 'Edit', edit_project_path(project), class: "btn btn-secondary btn-sm" %>
        <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Project', new_project_path, class: "btn btn-success" %>
