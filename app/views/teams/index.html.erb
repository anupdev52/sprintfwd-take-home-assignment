<h1>Teams</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td>
        <%= link_to 'Show', team, class: "btn btn-primary btn-sm" %>
        <%= link_to 'Edit', edit_team_path(team), class: "btn btn-secondary btn-sm" %>
        <%= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Team', new_team_path, class: "btn btn-success" %>
