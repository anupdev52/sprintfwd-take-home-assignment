<h1>Members</h1>

<table class="table">
  <thead class="thead-dark">
  <tr>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <th scope="col">Team</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @members.each do |member| %>
    <tr>
      <td><%= member.first_name %></td>
      <td><%= member.last_name %></td>
      <td><%= member.team.name if member.team %></td>
      <td>
        <%= link_to 'Show', member_path(member), class: "btn btn-info btn-sm mr-1" %>
        <%= link_to 'Edit', edit_member_path(member), class: "btn btn-primary btn-sm mr-1" %>
        <%= link_to 'Delete', member_path(member), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Member', new_member_path, class: "btn btn-success" %>
